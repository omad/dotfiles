scroll-up = polypomo time +60
scroll-down = polypomo time -60

[module/date]
type = custom/script
interval = 5

;date = " %Y-%m-%d"
;date-alt = " %Y-%m-%d"

exec = date +" %Y-%m-%d %H:%M"
;time = %H:%M
click-left = emacsclient -e "(let ((calendar-setup 'calendar-only)) (calendar))"
click-right = emacsclient -c -e '(progn (org-set-frame-title "Agenda") (org-agenda nil "d"))'
;click-right = rofi -show drun -show-icons -columns 3 -lines 9
;time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

;label =  %output%

